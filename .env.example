# Flask Secret Key
SECRET_KEY=generate-random-secret-key-here

# Refresh Token (protect refresh endpoints)
REFRESH_TOKEN=choose-a-secret-refresh-token

# Environment
FLASK_ENV=production
DEBUG=False

# Database path
DATABASE_PATH=data/fpl_data.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# API Rate Limiting
API_RATE_LIMIT_DELAY=0.5

# Refresh Schedule
REFRESH_HOUR=3
REFRESH_MINUTE=0
REFRESH_DAY_OF_WEEK=tue
